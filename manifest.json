{
  "manifest_version": 3,
  "name": "Screenshot Extension",
  "description": "A simple extension to take screenshots.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "offscreen",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
